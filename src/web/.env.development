# Version: v1.0.0
# Purpose: Development environment configuration for Incepta web application

# API Settings
# Base URL for development API endpoints
VITE_API_BASE_URL=http://localhost:3000

# API version for endpoint routing
VITE_API_VERSION=v1

# Request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Authentication Configuration
# OAuth 2.0 settings for development environment
VITE_OAUTH_CLIENT_ID=incepta_dev_client

# OAuth callback URL - must match registered redirect URI
VITE_OAUTH_REDIRECT_URI=http://localhost:5173/auth/callback

# Enable Multi-Factor Authentication for development
VITE_MFA_ENABLED=true

# Real-time Communication
# WebSocket endpoint for development environment
VITE_WEBSOCKET_URL=ws://localhost:3000

# Environment Configuration
# Environment identifier - used for conditional features
VITE_ENVIRONMENT=development

# Development Tools
# Enable detailed logging for debugging
VITE_ENABLE_LOGS=true

# Feature Flags
# Mock API toggle for development (optional)
VITE_ENABLE_MOCK_API=false